#include <bits/stdc++.h>
using namespace std;

int main() {
	// your code goes here
	 ios_base::sync_with_stdio(false);
	 cin.tie(NULL);
	 int t;
	 cin>>t;
	 while(t--){
	     int n;
	     cin>>n;
	     int arr[n];
	     for(int i=1;i<=n;i++){
	         cin>>arr[i];
	     }
	    long long int sum=0;
	     for(int i=1;i<=n;i++){
	         if(arr[i]<=i){
	             sum+=n-i+1;
	         } else{
	             sum+=0;
	         }
	     }
	     cout<<sum<<"\n";
	 }
	return 0;
}
